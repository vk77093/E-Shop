
@inject NavigationManager Nvm
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <EditForm Model="loginVM" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-group">
                    <label>User Name</label>
                    <InputText @bind-Value="loginVM.UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>User Passowrd</label>
                    <InputText @bind-Value="loginVM.Password" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Log In</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private LoginVM loginVM;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        loginVM = new LoginVM();
    }
    private void HandleLogin()
    {
        Nvm.NavigateTo($"/authenticate?userName={loginVM.UserName}&pwd={loginVM.Password}", true);
    }
}
