@page "/counter"

<h1>Counter With Cascading Paramter</h1>

<CascadingValue Name="counterValue" Value="@currentCount" >
    <Counter1 />
</CascadingValue>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
